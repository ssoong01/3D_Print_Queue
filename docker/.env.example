# Docker Environment Configuration
# Copy this to .env when using Docker

# Server Configuration
API_PORT=3000
WEB_PORT=8080
NODE_ENV=production

# JWT Secret - CHANGE THIS IN PRODUCTION!
JWT_SECRET=your-secure-random-string-here

# Admin Password
ADMIN_PASSWORD=admin

# MongoDB Configuration (Docker)
MONGODB_HOST=db
MONGODB_PORT=27017
MONGODB_DATABASE=print-queue

# Host Directory for Uploads (configure before running docker-compose)
# Windows example: UPLOADS_HOST_DIR=W:/3d-print-queue/uploads
# Linux/Mac example: UPLOADS_HOST_DIR=/home/user/3d-print-queue/uploads
# Current directory: UPLOADS_HOST_DIR=./uploads
UPLOADS_HOST_DIR=./uploads