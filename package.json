{
  "name": "3d-print-queue",
  "version": "1.0.0",
  "description": "A web application for managing 3D print requests with user authentication and a shared queue.",
  "main": "src/server/server.ts",
  "type": "module",
  "scripts": {
    "start": "node --experimental-specifier-resolution=node dist/server/server.js",
    "build": "tsc && webpack --mode production",
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "nodemon --watch src/server --ext ts --exec \"node --loader ts-node/esm src/server/server.ts\"",
    "client:dev": "webpack serve --mode development",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "lru-cache": "^10.0.1",
    "mongoose": "^7.6.3",
    "nodemailer": "^7.0.9",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.16.0",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.19",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.8.4",
    "@types/nodemailer": "^7.0.2",
    "@types/react": "^18.2.28",
    "@types/react-dom": "^18.2.13",
    "@types/ws": "^8.18.1",
    "concurrently": "^8.2.1",
    "css-loader": "^7.1.2",
    "html-webpack-plugin": "^5.6.4",
    "nodemon": "^3.0.1",
    "rimraf": "^5.0.5",
    "style-loader": "^4.0.0",
    "ts-loader": "^9.5.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.2.2"
  },
  "overrides": {
    "glob": "^10.3.10",
    "rimraf": "^5.0.5"
  },
  "license": "MIT"
}
