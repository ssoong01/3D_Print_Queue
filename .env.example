# Server Configuration
API_PORT=3000
WEB_PORT=8080
NODE_ENV=development

# JWT Secret - REQUIRED for security
JWT_SECRET='change-me-to-random-string'

# Admin Password - Default is 'admin' for initial setup
ADMIN_PASSWORD=admin

# MongoDB Configuration
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_DATABASE=print-queue

# Uploads Directory - Path where uploaded showcase images will be stored
# For Windows: Use forward slashes or escaped backslashes
# Example Windows: W:/3d-print-queue/uploads or W:\\3d-print-queue\\uploads
# Example Linux/Mac: /home/user/3d-print-queue/uploads
# Default: ./uploads (relative to project root)
UPLOADS_DIR=./uploads